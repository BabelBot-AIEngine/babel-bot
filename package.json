{
  "name": "babel-bot",
  "version": "1.0.0",
  "description": "A TypeScript API for translating media articles with editorial guidelines",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run build:client",
    "build:client": "webpack --mode production",
    "start": "node dist/index.js",
    "dev": "concurrently \"ts-node src/index.ts\" \"npm run dev:client\"",
    "dev:client": "webpack serve --mode development",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "translation",
    "api",
    "typescript",
    "media"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.57.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^5.18.0",
    "@mui/material": "^5.18.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@types/sqlite3": "^3.1.11",
    "concurrently": "^9.2.0",
    "cors": "^2.8.5",
    "css-loader": "^7.1.2",
    "deepl-node": "^1.19.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "html-webpack-plugin": "^5.6.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sqlite3": "^5.1.7",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.19.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
