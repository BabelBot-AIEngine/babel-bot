  "name": "babel-bot",
  "version": "1.0.1",
  "description": "A TypeScript API for translating media articles with editorial guidelines",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run build:client",
    "build:client": "vite build",
    "start": "node dist/index.js",
